extends base
block content
    div.content
        div.row
            each stn in stations
                div.col-lg-4.text-right
                    div.card.card-chart
                        div.card-header
                            h3.card-category ایستگاه بارانسنجی #{stn.name}
                            - i = stn.id
                            h5.card-title(id= i )
                                i.tim-icons.icon-bell-55.text-primary
                                span(id='rain_status')                        وضعیت بارندگی 
                                br
                                i.tim-icons.icon-bell-55.text-primary
                                span(id='rain_status')                        آلارم ها 
                                br
                                i.tim-icons.icon-bell-55.text-primary
                                span(id='rain_total')    
                                br
                                i.tim-icons.icon-bell-55.text-primary
                                span(id='rain_24')
                                br
                                i.tim-icons.icon-bell-55.text-primary
                                span(id='rain_12') 
                        div.card-body
                            div.chart-area
                                //- canvas(id='chartLinePurple')
                                - chart_id = 'CountryChart' + stn.id
                                canvas(id= chart_id)