mixin sidebar()
    div.sidebar
        //- Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red"
        div.sidebar-wrapper
            div.logo
                //- a.simple-text.logo-mini(href='javascript:void(0)') سمنان   
                //- a.simple-text.logo-normal(href='javascript:void(0)')  ایستگاه های بارانسنجی
                a.simple-text.logo-normal(href='javascript:void(0)')
            ul.nav
                if block
                    block
            include _fixed-plugin
            include _nextprev
            